{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "CommonJS",                
    "lib": ["ES2020"],                     
    "outDir": "./dist",                    
    "rootDir": "./src",                      
    "moduleResolution": "node",              
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                    
    "strict": true                         
  },
  "include": ["src/**/*.ts"],               
  "exclude": ["node_modules", "dist"]        
}
